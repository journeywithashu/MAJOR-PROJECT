<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
     <h3><%= listing.title %></h3>
     </div>
     <div class="card col-6 offset-3" >
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
    <%= listing.description %> <br>
    &#8377;<%= listing.price.toLocaleString("en-IN")%> <br>
    <%= listing.location %> <br>
    <%= listing.country %>
    </p>
  </div>
</div>

<br>
<div class="btns">
<a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

   <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
     <button class="btn btn-dark  offset-5">Delete</button>
 </form>
</div>
<hr>
<div class="col-8 offset-3 mb-3">
  <h4>Leave a Review</h4>
  <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
    <div class="mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" class="form-range">
    </div>
    <div class="mb-3">
    <label for="comment" class="form-label">Comment</label>
    <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" required></textarea>
    <div class="invalid-feedback">
      Please submit some comment for review.
    </div>
    </div>
    <div class="mb-3">
      <button class="btn btn-dark">Submit</button>
    </div>
  </form>
</div>
</div>
